<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile.ProfileFragment">


    <TextView
        android:id="@+id/heightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/heightLabel"
        tools:layout_editor_absoluteX="108dp" />

    <TextView
        android:id="@+id/startedweightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Starting Weight:"
        app:layout_constraintTop_toBottomOf="@+id/heightLabel"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:id="@+id/weightGoalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Weight Goal:"
        app:layout_constraintTop_toBottomOf="@+id/calorieburnedLabel"
        tools:layout_editor_absoluteX="51dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/weightgoalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/weightGoalLabel"
        tools:layout_editor_absoluteX="223dp" />

    <TextView
        android:id="@+id/heightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Height:"
        app:layout_constraintTop_toBottomOf="@+id/updateStats"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:id="@+id/calorieburnedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Daily Calories Burned:"
        app:layout_constraintTop_toBottomOf="@+id/calorieIntakeLabel"
        tools:layout_editor_absoluteX="50dp" />

    <Button
        android:id="@+id/updateGoals"
        android:layout_width="118dp"
        android:layout_height="58dp"
        android:text="Update Goals"
        app:layout_constraintBaseline_toBaselineOf="@+id/updateStats"
        tools:layout_editor_absoluteX="239dp" />

    <TextView
        android:id="@+id/currentweightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/currentweightLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/calorieintakeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/calorieIntakeLabel"
        tools:layout_editor_absoluteX="223dp" />

    <TextView
        android:id="@+id/currentweightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Current Weight:"
        app:layout_constraintTop_toBottomOf="@+id/startedweightLabel"
        tools:layout_editor_absoluteX="47dp" />

    <TextView
        android:id="@+id/goalsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Goals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentweightValue" />

    <TextView
        android:id="@+id/calorieIntakeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Daily Calorie Intake"
        app:layout_constraintTop_toBottomOf="@+id/goalsLabel"
        tools:layout_editor_absoluteX="50dp" />

    <Button
        android:id="@+id/updateStats"
        android:layout_width="119dp"
        android:layout_height="58dp"
        android:layout_marginTop="14dp"
        android:text="Update Statistics"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="47dp" />

    <TextView
        android:id="@+id/startedweightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/startedweightLabel"
        tools:layout_editor_absoluteX="166dp" />

    <TextView
        android:id="@+id/calorieburnedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/calorieburnedLabel"
        tools:layout_editor_absoluteX="224dp" />
</androidx.constraintlayout.widget.ConstraintLayout>